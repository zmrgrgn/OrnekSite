@using OrnekSite.Identity
@model IEnumerable<ApplicationUser>
@{
    ViewBag.Title = "UserList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="row">
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Kullanıcı Listesi</h3>
                </div><!-- /.box-header -->
                <div class="box-body">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>Adı</th>
                                <th>Soyadı</th>
                                <th>Kullanıcı Adı</th>
                                
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>
                                        @item.Surname
                                    </td>
                                    <td>
                                        @item.UserName
                                    </td> 

                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr>
                                <th>Adı</th>
                                <th>Soyadı</th>
                                <th>Kullanıcı Adı</th>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>