@model OrnekSite.Models.Login
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div id="sidebar" class="span3">
        <div class="well well-small">
            <ul class="nav nav-list">
                @Html.Action("_CategoryList", "Category")
                <li style="border:0"> &nbsp;</li>
                <li> <a class="totalInCart" href="cart.html"><strong>Total Amount  <span class="badge badge-warning pull-right" style="line-height:18px;">$448.42</span></strong></a></li>
            </ul>
        </div>


        @Html.Action("_FeaturedProductList", "Home")
    </div>
    <div class="span9">
        <ul class="breadcrumb">
            <li><a href="/Home/Index">Anasayfa</a> <span class="divider">/</span></li>
            <li class="active">Giriş</li>
        </ul>
        <h3> Kayıt</h3>
       
        <div class="well">
            @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
            {

                <h3>Giriş</h3>
                <div class="control-group">
                    <label class="control-label" for="inputFname">Kullanıcı Adı</label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Username, new { htmlAttributes = new { @class = "form-control", @style = "max-widht:35%, min-widht:35% " } })
                            @Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
               
                <div class="control-group">
                    <label class="control-label" for="inputFname">Şifre</label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "form-control", @style = "max-widht:35%, min-widht:35% " } })
                            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
               
                <div class="control-group">
                    <div class="controls">
                        <input type="submit" name="submitAccount" value="Giriş Yap" class="btn btn-success">
                    </div>
                </div>
            }
        </div>

    </div>
</div>


