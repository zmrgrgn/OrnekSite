@model OrnekSite.Models.ChangePasswordModel
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div id="sidebar" class="span3">
        <div class="well well-small">
            <ul class="nav nav-list">
                @Html.Action("_CategoryList", "Category")
                <li style="border:0"> &nbsp;</li>
                <li> <a class="totalInCart" href="cart.html"><strong>Total Amount  <span class="badge badge-warning pull-right" style="line-height:18px;">$448.42</span></strong></a></li>
            </ul>
        </div>


        @Html.Action("_FeaturedProductList", "Home")
    </div>
    <div class="span9">
        <ul class="breadcrumb">
            <li><a href="/Home/Index">Anasayfa</a> <span class="divider">/</span></li>
            <li class="active">Şifre Değiştirme</li>
        </ul>
        <h3> Registration</h3>
        <hr class="soft" />
        <div class="well">
            @using (Html.BeginForm("ChangePassword", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
            {

                <h3> Şifrenizi değiştirebilirsiniz.</h3>
                @Html.AntiForgeryToken()

                <div class="control-group">
                    <label class="control-label" for="inputFname">Eski Şifre</label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.OldPassword, new { htmlAttributes = new { @class = "form-control", @style = "max-widht:35%, min-widht:35% " } })
                            @Html.ValidationMessageFor(model => model.OldPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputFname">Yeni Şifre</label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.NewPassword, new { htmlAttributes = new { @class = "form-control", @style = "max-widht:35%, min-widht:35% " } })
                            @Html.ValidationMessageFor(model => model.NewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <label class="control-label" for="inputFname">Şifre Tekrar</label>
                    <div class="controls">
                        <div class="col-md-10">
                            @Html.PasswordFor(model => model.ConNewPassword, new { htmlAttributes = new { @class = "form-control", @style = "max-widht:35%, min-widht:35% " } })
                            @Html.ValidationMessageFor(model => model.ConNewPassword, "", new { @class = "text-danger" })
                        </div>
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <input type="submit" name="submitAccount" value="Şifre Değiştir" class="exclusive shopBtn">
                    </div>
                </div>
            }
        </div>

    </div>
</div>

